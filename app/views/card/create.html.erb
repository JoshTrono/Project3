<%= render 'layouts/nav' %>
<p>Create your flashcard for <%= Deck.where(id: @deckid).pluck(:name).first %></p>

<%= form_with  path: card_create_path, method: :post do |form| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :deck_ids, @deckid %>
  <%= form.label :question, "Question" %>
  <%= form.text_field :question %>
  <%= form.label :description, "answer" %>
  <%= form.text_field :description %>
  <%= form.submit "Create" %>
<% end %>